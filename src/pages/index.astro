		<div class="space-y-10 lg:pl-16 xl:pl-24">
			<ListLayout title="Social & Contact">
				<ol class="space-y-2">
					<li>
						{
							socials.map(item => {
								return <ListElement icon={item.icon} link={item.link} label={item.label} details={item.details}/>
							})
						}
					</li>
				</ol>
			</ListLayout>

			<ListLayout title="Skills">
				<ol class="space-y-2">
					<li>
						{
							skills.sort((a, b) => b.details - a.details).map(item => {
								return <ListElement icon={item.icon} link={item.link} label={item.label} details={() => {
									switch (item.details) {
										case -1:
											return "Just now ðŸ‘€";
										case 1:
											return item.details + " year";
										default:
											return item.details + " years";
									}
								}}/>
							})
						}
					</li>
				</ol>
			</ListLayout>
		</div>
	</section>
</MainLayout>

<style is:global>
	.h-center {
