---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-900 bg-zinc-50 dark:text-white w-full">
	<div class="space-y-8 container mx-auto px-4 py-8 bg-white dark:bg-neutral-800 min-h-screen w-full">
		<main class="flex-grow px-8 md:px-16 w-full">
		<slot />
		</main>
		<footer class="flex justify-center space-x-4">
			<p class="text-center text-neutral-900 dark:text-white">Build with ❤️ using Astro 3.0.9 by Thomas Nürk</p>
		</footer>
	</div>
	</body>
</html>
