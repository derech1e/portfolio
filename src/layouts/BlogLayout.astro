---
import type {CollectionEntry} from "astro:content";
import MainLayout from "./MainLayout.astro";

type Props = CollectionEntry<'blog'>['data'];

const {title, tags, publishDate} = Astro.props;
---

<MainLayout className="items-center justify-center flex">
    <article class="prose dark:prose-invert prose-code:before:content-none prose-code:after:content-none prose-quoteless w-full">
        <slot />
        <footer>
            <p>Published on {publishDate}</p>
            <p class="mb-5">Tags: {tags.join(', ')}</p>
            <a href="/blog/" class="px-3 py-2 border-0.5 mt-5">Back</a>
        </footer>
    </article>
</MainLayout>

<style is:inline>
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        margin: 0 0 0.5rem 0 !important;
        line-height: 1.2 !important;
    }
    h1 {
        font-size: 3.052em !important;
    }
    h2 {
        font-size: 2.441em !important;
    }
    h3 {
        font-size: 1.953em !important;
    }
    h4 {
        font-size: 1.563em !important;
    }
    h5 {
        font-size: 1.25em !important;
    }
    strong,
    b {
        font-weight: 700 !important;
    }
    p {
        margin-bottom: 1em !important;
    }
    .prose p {
        margin-bottom: 2em !important;
    }
    textarea {
        width: 100% !important;
        font-size: 16px !important;
    }
    input {
        font-size: 16px !important;
    }
    table {
        width: 100% !important;
    }
    img {
        max-width: 100% !important;
        height: auto !important;
        border-radius: 8px !important;
    }
    code {
        padding: 2px 5px !important;
        @apply dark:bg-gray-700 bg-gray-200 rounded-sm !important;
    }
    pre {
        padding: 1.5em !important;
        border-radius: 8px !important;
    }
    pre > code {
        all: unset !important;
    }
